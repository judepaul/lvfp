<div class="row" style="height:60px"></div>  
<div class="container">
<div class="row justify-content-center">
<div class="col-md-10">
<div class="card" style="width:900px;">
                    <div class="card-header text-white text-bold">
                      <div class="row">
                        <div class="col-md-6">Manage Campaigns</div>
                        <div class="col-md-6 text-right">
                          <span style="cursor: pointer;" class="campaing-show"><i class="fas fa-info-circle fa-lg"></i></span>
                        </div>
                      </div>
                    </div>
                    <div class="card-body" style="height:auto;">
<%= form_with(model: access_code, local: true) do |form| %>
    <!-- <div id="error_explanation">
      <h2><%#= pluralize(access_code.errors.count, "error") %> prohibited this access_code from being saved:</h2>

      <ul>
      <!% access_code.errors.full_messages.each do |message| %>
        <li><%#= message %></li>
      <!% end %>
      </ul>
    </div> -->
<p id="notice"><%#= notice %></p>
<%= render "layouts/shared/flash_message" %>
<div class="form-group row"></div>
<div class="form-group row">
                                <!-- Commented by Jude on 23/02/2020 - after discussion with Gaurav, capability to add a new access code on demand means only for Title, code has been generated by the system  -->
                                <!-- <label for="email_address" class="col-md-4 col-form-label text-md-right">Access Code</label>
                                <div class="col-md-6">
                                    <%#= form.number_field :code, id: :access_code_code, class: "form-control" %>
                                </div> -->
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right text-bold">Campaign Name <span style="cursor: pointer;" class="show" data-toggle="tooltip" title="Campaign name is an identity for list the articles which are belongs to that."><i class="fas fa-info-circle fa-lg"></i></span></label>
                                <div class="col-md-6">
                                    <%= form.text_field :title, id: :access_code_title, class: "form-control", placeholder: 'Required' %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right text-bold">Listener Group Name <span style="cursor: pointer;" class="show" data-toggle="tooltip" title="A unique name that must be given to the group when you create a new one. Ex: Access code 9999 is identified as VC-Podcast" ><i class="fas fa-info-circle fa-lg"></i></span></label>
                                <div class="col-md-6">
                                    <%#= form.text_field :title, id: :access_code_title, class: "form-control" %>
                                    <% if access_code.new_record? %>
                                      <%= text_field_tag "listener_group_name", "", class: "form-control", placeholder: 'Optional' %>
                                    <% else %>
                                      <%= text_field_tag "listener_group_name", !access_code.listener.blank? ? access_code.listener.group_name : "", class: "form-control", placeholder: 'Optional' %>
                                    <% end %>
                                </div>
                            </div>
                            <div class="actions text-right" style="padding:30px 40px 30px 0; bottom: 0; right: 0;">
    <%= link_to 'Cancel', access_codes_path, class: "btn btn-outline-primary" %>
    <%= form.submit "Submit", id: 'campaign-save', class: "btn btn-outline-primary" %>

  </div>
</div>
</div>  
<% end %>
</div>
</div>
</div>


<!-- Modal -->
<div class="modal fade" id="FAQcontentModal-campiagn" data-keyboard="false" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="contentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
          <div class="col-md-6">
            <h5 class="modal-title" id="exampleModalLabel">FAQ</h5>
          </div>
          <div class="col-md-3 text-right" >
            <!-- <audio id="audioPlayback" controls> -->
            <audio id="audioPlayback">
              <source id="audioSource" type="audio/mp3" src="">
            </audio>
            <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close" data-toggle="tooltip" data-placement="top" title="Close">
              <i class="fa fa-times-circle fa-lg"></i> 
            </button>
            </div>
      </div>
      <input type="hidden" id="speech_content" />
      <div id="contentDetails" class="modal-body">
        <%= render "layouts/shared/faq" %>
      </div>
      <div class="modal-footer">
        <div class="col-md-6"></div>
        <div class="col-md-6 offset-md-5 text-right">
          <button type="button" class="btn btn-outline-primary close-modal" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>