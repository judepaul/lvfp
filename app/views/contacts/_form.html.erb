<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-black">CONTACT US</div>
                    <div class="card-body">
                      <%= render "layouts/shared/flash_message" %>
                      <%#= render "devise/shared/error_messages", resource: resource %>
					  <%= form_with(model: contact, local: true) do |form| %>
                          <div class="form-group row">
                            <label for="email" class="col-md-2 col-form-label text-md-right">Name</label>
                                <div class="col-md-8">
									<%= form.text_field :name, id: :contact_name, autofocus: true, class: "form-control", autocomplete: "name"  %>
                                </div>
                          </div>

                          <div class="form-group row">
                            <label for="email" class="col-md-2 col-form-label text-md-right">Email</label>
                                <div class="col-md-8">
                                    <%= form.email_field :email, class: "form-control", autocomplete: "email" %>
                                </div>
                          </div>

                          <div class="form-group row">
                                <label for="email" class="col-md-2 col-form-label text-md-right">Phone</label>
                                <div class="col-md-8">
                                    <%= form.phone_field :phone, class: "form-control", autocomplete: "phone" %>
                                </div>
                            </div>
							
                            <div class="form-group row">
                                  <label for="email" class="col-md-2 col-form-label text-md-right">Subject</label>
                                  <div class="col-md-8">
                                      <%= form.text_field :subject, class: "form-control", autocomplete: "subject" %>
                                  </div>
                              </div>
							  
	                          <div class="form-group row">
	                                <label for="email" class="col-md-2 col-form-label text-md-right">Message</label>
	                                <div class="col-md-8">
	                                    <%= form.text_area :message, class: "form-control", autocomplete: "message", cols: 40, rows: 8 %>
	                                </div>
	                            </div>
  	                          <div class="form-group row">
  	                                <label for="email" class="col-md-2 col-form-label text-md-right"></label>
  	                                <div class="col-md-8">
										<%= recaptcha_tags %>
  	                                </div>
  	                            </div>
                          <div class="col-md-6 offset-md-5">
                            <%= form.submit "Submit", class: "btn btn-primary sub-heading" %>
                          </div>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
</main>
<div class="row" style="padding-bottom:60px;"></div>