<main class="login-form">
	<div class="cotainer">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header text-black text-center">Change your password</div>
					<div class="card-body">
						<%= render "layouts/shared/flash_message" %>
						<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
						<%#= render "devise/shared/error_messages", resource: resource %>
						<%= f.hidden_field :reset_password_token %>

						<div class="form-group row">
							<label for="password" class="col-md-4 col-form-label text-md-right font-weight-bold">New Password</label>
							<div class="col-md-6">
								<%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", required:true %>
								<!% if @minimum_password_length %>
								<em>(<%= @minimum_password_length %>characters minimum)</em>
								<!% end %><br />
							</div>
						</div>

						<div class="form-group row">
							<label for="password" class="col-md-4 col-form-label text-md-right font-weight-bold">Confirm new password</label>
							<div class="col-md-6">
								<%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required:true %>
								<!% if @minimum_password_length %>
								<em>(<%= @minimum_password_length %>characters minimum)</em>
								<!% end %><br />
							</div>
						</div>
													
						<div class="col-md-6 offset-md-6 pt-3 pb-2">
							<%= f.submit "Change my password", class: "btn btn-primary" %>
						</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</main>
<%#= render "devise/shared/links" %>
