<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header text-black">Register</div>
                    <div class="card-body">
                            <%= render "layouts/shared/flash_message" %>
                            <%#= render "devise/shared/error_messages", resource: resource %>
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
                                <div class="col-md-6">
                                    <%= f.email_field :email, autofocus: true, class: "form-control", autocomplete: "email" %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="username" class="col-md-4 col-form-label text-md-right">Name</label>
                                <div class="col-md-6">
                                    <%= f.text_field :username, autofocus: true, class: "form-control", autocomplete: "username" %>
                                </div>
                            </div>

                            
                            
                            <div class="col-md-6 offset-md-6">
                                    <%#= f.submit "Sign up", class: "btn btn-outline-primary" %>
                                <%# <a href="#" class="btn btn-link">
                                    Forgot Your Password?
                                </a> %>
                            </div>
                        <% end %>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>

</main>
