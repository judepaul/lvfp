<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-header text-white card-heading"><i class="fas fa-user"></i> Sign In</div>
                    <div class="card-body">
                        <%= render "layouts/shared/flash_message" %>
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right label-text">Username</label>
                                <div class="col-md-7">
                                    <%= f.text_field :username, autofocus: true, class: "form-control", autocomplete: "username" %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right label-text">Password</label>
                                <div class="col-md-7">
                                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-7 offset-md-4 text-md-right">
			                        <div>
			                          <a href="/auth/secret/new" style="text-decoration:none;"> Forgot Password? </a>
			                        </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="" class="col-md-4 col-form-label text-md-right label-text"></label>
                                <div class="col-md-7 text-center">
                                    <%= f.submit "Submit", class: "btn btn-outline-primary sub-heading" do %>
									<i class="fa fa-sign-in-alt"></i>
									<% end %>
                                </div>
                            </div>
                    <% end %>
                    </div>
                    </form>
                    <div class="col-md-11 text-center pt-0" style="text-align:right !important;">
                        <div>
                                    New User? <a href="/auth/register/signup" style="padding:0 12px 0 3px;text-decoration:none;"> Sign Up </a>
                                </div>
                    </div>
                    <!-- <div class="col-md-11 text-center pt-0" style="text-align:right !important;">
                        <div>
                                    Not received confirmation email? <a href="/auth/verification/new" style="padding:0 12px 0 3px;text-decoration:none;"> Re-Send </a>
                                </div>
                    </div> -->
                </div>
                
            </div>
        </div>
    </div>
    </div>

</main>
<%#= render "devise/shared/links" %>
