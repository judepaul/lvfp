<main class="login-form">
	<div class="cotainer">
		<div class="row">
			<div class="col-md-4 offset-md-1">
				<%= render "layouts/shared/flash_message" %>
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-group">
					<label for="email_address" class="col-md-4 col-form-label text-md-left label-text pl-0">Username</label>
					<%= f.text_field :username, autofocus: true, class: "form-control", autocomplete: "username", required:true %>
				</div>

				<div class="form-group">
					<label for="password" class="col-md-4 col-form-label text-md-left label-text pl-0">Password</label>
					<%= f.password_field :password, autocomplete: "current-password", class: "form-control", required:true %>
				</div>

				<div class="form-group">
					<div class="offset-md-7 text-md-right" style="font-size:16px !important;">
						<div>
							<a href="/secret/new" style="text-decoration:none;color:#484848;"> Forgot Password? </a>
						</div>
					</div>
				</div>
	                    
				<div class="form-group">
					<div style="font-size:14px !important;">
						<%= check_box_tag 'terms_and_conditions', '1', true %>
						I have read and agree to the Terms of Service
					</div>
				</div>
				<div class="form-group">
					<!-- <div class=""><span  style="font-size:16px !important;">New User?</span> <a href="/signup" style="padding:0 12px 0 3px;text-decoration:none;color:#000;" class="content-text"> Sign Up! </a></div> -->
					<div class="text-right">
						<%= f.submit "Submit", id:"signin-submit", class: " btn btn-primary sub-heading", disabled: false do %>
						<i class="fa fa-sign-in-alt"></i>
						<% end %>
					</div>
				</div>
			</div>
			<% end %>
		</div>
		<div class="col-md-1"></div>
		<div class="col-md-5 pr-1">
			<h1 style="font-size:42px!important;color:#484848!important;"><%= random_text.html_safe %></h1>
		</div>
	</div>
</div>
</main>
	
<script type="text/javascript">
$('document').ready(function(){
	$('#terms_and_conditions').change(function() {
		$('input[type=submit]').attr('disabled', !$(this).is(':checked'));
	});
		
});
	
</script>