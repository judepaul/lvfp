<p id="notice"><%= notice %></p>

<h1>Listeners</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Group name</th>
      <th>Group code</th>
      <th>Group title</th>
      <th>Group description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listeners.each do |listener| %>
      <tr>
        <td><%= listener.user %></td>
        <td><%= listener.group_name %></td>
        <td><%= listener.group_code %></td>
        <td><%= listener.group_title %></td>
        <td><%= listener.group_description %></td>
        <td><%= link_to 'Show', listener %></td>
        <td><%= link_to 'Edit', edit_listener_path(listener) %></td>
        <td><%= link_to 'Destroy', listener, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

