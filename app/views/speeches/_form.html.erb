  function aud_play_pause() {
  var myAudio = document.getElementById("audioPlayback");
  if (myAudio.paused) {
    myAudio.play();
    $(".play").html("").html('<i class="fa fa-pause-circle fa-lg" aria-hidden="true"></i>');
  } else {
    myAudio.pause();
