          <thead class="thead-light h5 font-weight-bold">
            <tr>
              <nav style="background-color:#e9ecef !important;">
                <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                  <a class="nav-item nav-link table-heading pointer active <%#= params[:tab]==nil || params[:tab]=='All' ? 'active' : '' %>" id="nav-all-tab" onclick="return nav_all_tab(<%= ac.code %>)" data-toggle="tab" href="#nav-all" role="tab" aria-controls="nav-home" aria-selected="true"><span style="color:#000 !important;"><i class="fas fa-square" style="color:orange;"></i> <i class="fas fa-square" style="color:green;"></i> All</span></a>
                  <a class="nav-item nav-link table-heading pointer <%#= params[:tab]=='Draft' ? 'active' : '' %>" id="nav-draft-tab" onclick="return nav_draft_tab(<%= ac.code %>)" data-toggle="tab" href="#nav-draft" role="tab" aria-controls="nav-profile" aria-selected="false"><span style="color:#000 !important;"><i class="fas fa-square" style="color:orange;"></i> Draft</span></a>
                  <a class="nav-item nav-link table-heading pointer <%#= params[:tab]=='Published' ? 'active' : '' %>" id="nav-published-tab" onclick="return nav_published_tab(<%= ac.code %>)" data-toggle="tab" href="#nav-published" role="tab" aria-controls="nav-contact" aria-selected="false"><span style="color:#000 !important;"><i class="fas fa-square" style="color:green;"></i> Published</span></a>
                </div>
              </nav>
              
              
            </tr>
          </thead>
        <% if speech_arr.blank? %>
          <tbody>
            <tr>
                <% if tab=="Draft"  %>
                    <td colspan=3 class="text-center" style="color: red">Uh-oh, There were no articles in draft.</td>
                <% elsif tab=="Published" %>
                    <td colspan=3 class="text-center" style="color: red">Uh-oh, There were no published articles.</td>
                <% else %>
                    <td colspan=3 class="text-center" style="color: red">Uh-oh, There were no articles.</td>
                <% end %>
            </tr>
          </tbody>
        <% else %>
        <% speech_arr.sort_by(&:updated_at).reverse.each_with_index do |speech,indx| %>
          <tbody>
            <tr style="cursor: pointer;">
              <td><p class="content"><i class="fas fa-square" style="color:<%= speech.published? ? 'green' : 'orange' %>;"></i> Title: <%= !speech.title.blank? ? speech.title : 'N/A' %> 
                <!-- <span style="padding: 1px 5px 1px 5px; color:#FFF; background-color: <%#= speech.published? ? 'green' : !speech.published? ? 'orange' : "" %>;"><strong><%#= speech.published? ? 'Published' : !speech.published? ? 'Draft' : "" %></strong></span> -->
                <span style="padding: 2px 5px 1px 2px;">
                  <% if speech.published? %>
                    <%= link_to("/speeches/published_details/#{speech.id}",style:"text-decoration:none;",class:"btn btn-outline-success px-1 py-0") do %><i class="fas fa-link fa-1x"></i> Published<% end %> 
                    <span style="float: right; padding-right:10px; font-size:16px; letter-spacing:0px; font-weight:bold;"> <%= image_tag 'icon-calendar', alt: "calendar" %> <%= speech.updated_at.strftime("%m/%d/%Y") %></span>
                  <% else %> 
                    <span class="btn btn-outline-warning px-1 py-0">Draft</span>
                    <span style="float: right; padding-right:10px; font-size:16px; letter-spacing:0px; font-weight:bold;"> <%= image_tag 'icon-calendar', alt: "calendar" %> <%= speech.updated_at.strftime("%m/%d/%Y") %></span>
                  <% end %>
                </span>
                </p>
                <p class="content"><%= !speech.email_from.blank? ? speech.email_from.rstrip.concat('.') : '' %> <%= speech.content %></p>
                <div class="actions" style="display:none; float:right;">
                  <i class="fas fa-edit btn btn-secondary" style="padding:5px!important;background-color:#61318f !important; border-color:#61318f !important;" onclick="location.href='<%= edit_speech_path(speech) %>'"></i>
                  <a href="/speeches/<%=speech.id%>" data-method="delete" data-confirm="<%= speech.published? ? 'This article is already published. Are you sure you want to delete?' : 'Are you sure you want to delete this article?' %>" data-title='Confirm Deletion' data-commit='Yes do it!' data-cancel='Not really!'  class='btn btn-secondary delete-speech' style="padding:1px 6px 1px 6px!important;background-color:#61318f !important; border-color:#61318f !important;" id="delete-btn">
                    <i class="fas fa-trash-alt"></i></a>
                  </div>

              </td>
            </tr>
        <% end %>
          </tbody>
        <% end %>